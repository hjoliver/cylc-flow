[scheduling]
    cycling mode = integer
    final cycle point = 2
    [[graph]]
        alpha = "a => b"
        omega = "x => y"
        R1 = "foo => bar"
        P1 = "bar[-P1] => bar => baz"
[runtime]
    [[a]]
        script = cylc stop $CYLC_WORKFLOW_ID
    [[b]]
    [[x]]
        script = cylc stop $CYLC_WORKFLOW_ID
    [[y]]
    [[foo]]
    [[bar]]
        script = """
            if ((CYLC_TASK_CYCLE_POINT == 1)); then
                cylc stop $CYLC_WORKFLOW_ID
            fi
        """
    [[baz]]
